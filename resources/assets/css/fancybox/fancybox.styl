#fancybox
  background url(http://fancyapps.com/fancybox/source/fancybox_overlay.png) repeat
  opacity 0.9
  //display none
  position fixed
  left 0
  right 0
  bottom 0
  top 0
  z-index 8010
  width 100%
  height 100%

.fancybox-wrap
  width: 869px;
  background #fff
  display table
  margin 0 auto
  position relative
  padding 15px
  border-radius 10px
  top 50px
  z-index 8030

.fancybox-close
  background url(http://fancyapps.com/fancybox/source/fancybox_sprite.png) no-repeat
  cursor pointer
  height 36px
  position absolute
  right -18px
  top -18px
  width 36px
  z-index 8040

.form-box
  border:1px solid red
  display:flex
  justify-content: center
  align-items: center

.form-image
  border:1px solud blue

.form-group 
  border:1px solid black
.animated
  animation-duration 1s
  animation-fill-mode both

  @keyframes
    fadeIn
      from 
    opacity 0

.fadeIn
  animation-name fadeIn