.MainContent
  display: flex
  justify-content: space-around
  align-items: center
  min-height: 900px

  &-category
    display:flex
    justify-content: space-between
    align-items: flex-start
    flex-direction: row

    &-categoryMenu
      flex: 0 0 266px
      height: 578px
      background: #FFFFFF
      box-shadow: 0 16px 34px 7px rgba(121,121,121,0.10)
      border-radius: 4px

    &-categoryTitle
      font-size: 11px
      color: #A3A3A3  
      font-size: 11px
      margin-left: 20px

    &-resultContent
      display:flex
      justify-content: flex-start
      align-items: flex-start
      flex-direction: column

    &-resultTitle
      font-family: 'SFNSDisplay'
      margin-left:21px
      font-size:27px
      margin: 0 0 5px 20px

    &-resultBox
      width: 872px
      min-height: 762px
      margin-left:20px
      display: flex
      flex: 0 0 500px
      flex-direction: row
      justify-content: flex-start
      align-items: center
      flex-wrap: wrap
      border-top: 1px solid #E1E1E1
      padding-top:25px
